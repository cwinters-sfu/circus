{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

 {% block pageheader %} 
    <h1>Category</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('category_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('category_delete', { 'id': category.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Category?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Created</th>
                <td>{% if category.created %}{{ category.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if category.updated %}{{ category.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if category.clippings | length > 0 %}    
    <h2>Clippings</h2>
    <ul>
        {% for clippings in category.clippings %}
        <li>
            <a href="{{ path("clippings_show", {"id":clippings.id}) }}">
                {{ clippings }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
