{% extends 'base.html.twig' %}

{% block title %}sources{% endblock %}

{% block pageheader %}
    <h1>Source List</h1>
    <p class="count">
        Displaying {{ sources|length }} sources of {{ sources.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

        <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
            <a href="{{ path('source_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}
            <a href="{{ path('source_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>
        
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr><th>Date</th><th>Created</th><th>Updated</th>            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>
                    <a href="{{ path('source_show', { 'id': source.id }) }}">
                        {{ source.date }}
                    </a>
                </td>
                <td>{% if source.created %}{{ source.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if source.updated %}{{ source.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <div class="navigation">
        {{ knp_pagination_render(sources) }}
    </div>

{% endblock %}
