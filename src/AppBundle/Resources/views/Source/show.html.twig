{% extends 'base.html.twig' %}

{% block title %}Source{% endblock %}

 {% block pageheader %} 
    <h1>Source</h1>
 {% endblock %} 

{% block body %}
    <div class="btn-toolbar">
    <div class="btn-group pull-right">
        <a href="{{ path('source_index') }}" class="btn btn-default">
            <span class="glyphicon glyphicon-arrow-left"></span> Back
        </a>
        {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <a href="{{ path('source_edit', { 'id': source.id }) }}" class="btn btn-default">
            <span class='glyphicon glyphicon-edit'></span> Edit
        </a>
        <a href="{{ path('source_delete', { 'id': source.id }) }}" class="btn btn-default" data-confirm="Are you sure you want to delete this Source?">
            <span class='glyphicon glyphicon-remove'></span> Delete
        </a>
        {% endif %}
    </div>
</div>
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody><tr>
                <th>Date</th>
                <td>{{ source.date }}</td>
            </tr><tr>
                <th>Created</th>
                <td>{% if source.created %}{{ source.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr><tr>
                <th>Updated</th>
                <td>{% if source.updated %}{{ source.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>        
        </tbody>
    </table>
    {% if source.clippings | length > 0 %}    
    <h2>Clippings</h2>
    <ul>
        {% for clippings in source.clippings %}
        <li>
            <a href="{{ path("clippings_show", {"id":clippings.id}) }}">
                {{ clippings }}
            </a>
        </li>
        {% endfor %} 
    </ul>
    {% endif %}
{% endblock %}
